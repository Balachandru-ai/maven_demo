pipeline {
    agent any

    tools {
        maven 'Maven'
    }

    stages {

        stage('Build') {
            steps {
                dir('demo-app') {
                    sh 'mvn clean package'
                }
            }
        }

        stage('Stop Old App') {
            steps {
                sh 'pkill -f demo-0.0.1-SNAPSHOT.jar || true'
                sh 'sleep 5'
            }
        }

        stage('Deploy New App') {
            steps {
                dir('demo-app') {
                    sh 'nohup java -jar target/demo-0.0.1-SNAPSHOT.jar > app.log 2>&1 &'
                }
            }
        }

        stage('Verify') {
            steps {
                sh 'ps -ef | grep demo-0.0.1-SNAPSHOT.jar | grep -v grep'
            }
        }
    }
}
